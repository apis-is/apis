{
  "parser": "babel-eslint",
  "extends": "airbnb/base",
  "rules": {
    "arrow-body-style": ["off"],
    "func-names": ["off"],
    "consistent-return": ["warn"],
    "no-param-reassign": ["warn"],
    "no-inline-comments": ["error"],
    "max-len": ["error", 120],
    "semi": ["error", "never"]
  },
  "env": {
    "node": true,
    "mocha": true,
    "es6": true
  }
}
